#!/bin/sh
export BIN="$PORTSDIR/bin"
mkdir -p "$BIN"

help() {
    echo "$(basename $0) [i|r|u|h] [pkg]"
    echo "  i | install [pkg]"
    echo "  r | remove [pkg]"
    echo "  u | upgrade [pkg]"
    echo "  i | info [pkg]"
    echo "  h | help"
}

if [ -n "$2" ]; then
    case "$1" in
        i|install)
            cd "$PORTSDIR/list/$2"
            ./install
            ;; 
        r|remove)
            cd "$PORTSDIR/list/$2"
            ./uninstall
            ;;
        u|upgrade)
            cd "$PORTSDIR/list/$2"
            ./uninstall
            ./install 
            ;;
        i|info)
            echo "$2"
            echo
            cat "$PORTSDIR/list/$2/info"
            ;;
        help)
            help
            ;; 
        ""|*)
            echo Operation "'$1'" not supported
            ;;
    esac
else
    help
fi
